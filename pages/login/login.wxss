page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 212rpx;
  height: 212rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 10rpx 30rpx rgba(0, 0, 0, 0.07);
  border-radius: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 181rpx;
}

.logo image {
  width: 130rpx;
  height: 136rpx;
}

.title {
  margin-top: 64rpx;
  font-size: 48rpx;
  font-weight: 800;
  line-height: 66rpx;
  color: rgba(51, 51, 51, 1);
}

.desc {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(168, 168, 168, 1);
  position: relative;
  margin-top:10rpx;
}

.desc::before {
  position: absolute;
  content: '';
  width: 46rpx;
  height: 2rpx;
  background-color: rgba(229, 229, 229, 1);
  top: 17rpx;
  left: -54rpx;
}

.desc::after {
  position: absolute;
  content: '';
  width: 46rpx;
  height: 2rpx;
  background-color: rgba(229, 229, 229, 1);
  top: 17rpx;
  right: -54rpx;
  margin-top: 6rpx;
}

.wx-login-btn {
  width: 568rpx;
  height: 98rpx;
  background: linear-gradient(225deg, rgba(255, 209, 123, 1) 0%, rgba(255, 139, 65, 1) 100%);
  box-shadow: 0px 10rpx 30rpx rgba(254, 160, 53, 0.47);
  border-radius: 46px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 312rpx;
  position: relative;
}

.wx-login-btn button:not([size='mini']) {
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.wx-login-btn image {
  width: 68rpx;
  height: 68rpx;
}

.wx-login-btn text {
  color: #fff;
  margin-left: 2rpx;
}

.phone-login-link {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 68rpx;
}

.copyright-txt {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(168, 168, 168, 1);
  position:absolute;
  bottom:0;
}
